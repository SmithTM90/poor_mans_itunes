<h1>Main#index</h1>
<p>Find me in app/views/main/index.html.erb</p>

<%= form_tag('/', method: :GET) do %>
  <%= label_tag(:term, 'Search')%>
  <%= text_field_tag(:term) %>

  <%= submit_tag('Search') %>
<% end %>

<% @data.each do |music| %>
  <h2><%= music['artistName']%>
    <small><%=music['trackName'] %></small>
  </h2>
<%= image_tag(music['artworkUrl100']) %>
  <audio src="<%= music['previewUrl'] %>" controls></audio>
<% end %>